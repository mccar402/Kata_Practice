{
  "compilerOptions": {
    "lib": ["es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "build",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "jest"]
}
